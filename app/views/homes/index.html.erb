<p class = "notice"><%= notice %></p>

<div class = "margin">

    <h1>Books</h1>
    <table class = "index_main">
    <tr class = "index_main">
        <th class = "index_title">Title</th>
        <th class = "index_body">Body</th>
        <th colspan="3"></th>
    </tr>

        <% @books.each do |book| %>
            <tr>
                <td class = "book_title"><%= book.title %></td>
                <td class = "book_body"><%= book.body %></td>
                <td class = "links"><%= link_to "show", book_path(book) %>
                <%= link_to "edit", edit_book_path(book.id) %>
                <%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
        <% end %>
    </table>




    <div>
        <h1>NewBook</h1>
        <%= form_with model:@book, url:'/books',local:true do |f| %>
                <% if @book.errors.any? %>
                    <div id="error_explanation">
                        <ul class = "error_list">
                            <h4 class = "error_title"><%= pluralize(@book.errors.count, "error") %> prohibited this map from being saved:</h2>

                            <% @book.errors.full_messages.each do |message| %>
                                <li class="error_msg"><%= message %></li>
                            <% end %>

                        </ul>
                    </div>
                <% end %>


        <h4>Title</h4>
        <%= f.text_field :title %>
            <h4>Body</h4>
            <%= f.text_area :body %>
            <div>
                <%= f.submit 'Create Book' %>
            </div>
        <% end %>
    </div>


</div>